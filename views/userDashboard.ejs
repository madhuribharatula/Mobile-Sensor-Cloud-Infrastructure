<html lang="en">
<head>
    <title>User DashBoard</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/bootstrap.min.css" />
    <link rel="stylesheet" href="css/bootstrap-responsive.min.css" />
    <link rel="stylesheet" href="css/fullcalendar.css" />
    <link rel="stylesheet" href="css/matrix-style.css" />
    <link rel="stylesheet" href="css/matrix-media.css" />
    <link href="font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link rel="stylesheet" href="css/jquery.gritter.css" />
    <script src="http://code.jquery.com/jquery-latest.js"></script>
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/data.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.16.0/locale/af.js"></script>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,800' rel='stylesheet' type='text/css'>
    <script src="http://code.highcharts.com/modules/no-data-to-display.js"></script>
</head>
<body>
<!--Header-part-->
<div id="header">
    <h1>Dashboard</h1>
</div>
<!--close-Header-part-->

<!--top-Header-menu-->
<div id="user-nav" class="navbar navbar-inverse">
    <ul class="nav">
        <li  class="dropdown" id="profile-messages" ><a title="" href="#" data-toggle="dropdown" data-target="#profile-messages" class="dropdown-toggle"><i class="icon icon-user"></i>  <span class="text">Welcome User</span><b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li><a href="#"><i class="icon-user"></i> My Profile</a></li>
                <li class="divider"></li>
                <li><a href="/signout"><i class="icon-key"></i> Log Out</a></li>
            </ul>
        </li>
        <li class=""><a title="" href="/signout"><i class="icon icon-share-alt"></i> <span class="text">Logout</span></a></li>
    </ul>
</div>

<!--close-top-serch-->
<!--sidebar-menu-->
<div id="sidebar"><a href="#" class="visible-phone"><i class="icon icon-home"></i> Dashboard</a>
    <ul>
        <li class="active"><a href="/userDashboard"><i class="icon icon-home"></i> <span>My Dashboard</span></a> </li>
        <li> <a href="/GoogleMapData"><i class="icon icon-signal"></i> <span>Sensor Data Visualization</span></a> </li>
        <li> <a href="/ManageSensor"><i class="icon icon-inbox"></i> <span>Manage Sensors</span></a> </li>
        <li> <a href="/ManageSensorHub"><i class="icon icon-inbox"></i> <span>Manage Sensor Hub</span></a> </li>
        <li><a href="/billing"><i class="icon icon-th"></i> <span>Billing</span></a></li>
    </ul>
</div>
<!--sidebar-menu-->

<!--main-container-part-->
<div id="content">
    <!--breadcrumbs-->
    <div id="content-header">
        <div id="breadcrumb"> <a href="/userDashboard" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a></div>
    </div>
    <!--End-breadcrumbs-->

    <!--Action boxes-->
    <div class="container-fluid">
        <div class="quick-actions_homepage">
            <ul class="quick-actions">
                <li class="bg_lb"> <a href="/userDashboard"> <i class="icon-dashboard"></i>  My Dashboard </a> </li>
                <li class="bg_lg span3"> <a href="/GoogleMapData"> <i class="icon-signal"></i> Sensor Data Visualization</a> </li>
                <li class="bg_ly"> <a href="/ManageSensor"> <i class="icon-inbox"></i> Manage Sensors </a> </li>
                <li class="bg_lo"> <a href="/billing"> <i class="icon-th"></i> Billing</a> </li>
            </ul>
        </div>
        <!--End-Action boxes-->

    </div>

    <div class="row-fluid">
        <div id="graph_container" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
        <div class="widget-box">
            <div class="widget-title"> <span class="icon"> <i class="icon-th"></i> </span>
                <h5>Sensor Status</h5>
                <span class="label label-info">Sensor Status</span> </div>
            <div class="widget-content ">

                <table id="datatable" class="table table-bordered table-striped with-check">
                            <thead>
                            <tr>
                                <th>Sensor Status</th>
                                <th>Number of sensors</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% for(var i=0; i < data.length; i++) { %>
                            <tr>

                                <td><%= data[i].sensor_status%></td>
                                <td><%= data[i].count %></td>
                            </tr>
                            <% } %>
                            </tbody>
                        </table>



            </div>
        </div>
    </div>

</div>
<script type="text/javascript" >


    $(function () {

       Highcharts.chart('graph_container', {
            data: {
                table: 'datatable'
            },
            chart: {
                type: 'column'
            },
            title: {
                text: 'Sensor Status'
            },
            yAxis: {
                allowDecimals: false,
                title: {
                    text: 'Number of sensors'
                }
            },
            tooltip: {
                formatter: function () {
                    return '<b>' + this.series.name + '</b><br/>' +
                        this.point.y + ' ' + this.point.name.toLowerCase();
                }
            }
        });
    });

   </script>

<!--end-main-container-part-->

<!--Footer-part-->

<div class="row-fluid">
    <div id="footer" class="span12"> 2016 &copy; VTA Sensor Cloud </div>
</div>

<!--end-Footer-part-->

